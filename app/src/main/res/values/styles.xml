<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="help_cat_pre_margin">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">6dp</item>
    </style>

    <style name="help_cat">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">#ccc</item>
        <item name="android:textColor">#111</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="help_cat_post_margin">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">10dp</item>
    </style>

    <style name="help_pref">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">#CCC</item>
        <item name="android:textColor">#111</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="help_text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <color name="android_green">#A4C639</color>
    <color name="ics_blue">#33b5E5</color>
    <color name="my_yellow">#E8D018</color>
    <color name="my_darker_yellow">#D0BF27</color>

    <style name="main_theme" parent="@android:style/Theme">
    </style>

</resources>
